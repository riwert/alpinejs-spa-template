{
  "name": "alpinejs-spa",
  "version": "1.0.0",
  "author": "revert@revert.pl",
  "private": true,
  "scripts": {
    "css": "postcss assets/styles/main.css -o assets/styles/main.min.css --verbose",
    "server-reload": "browser-sync start --config './browser-sync-config.js'",
    "dev": "concurrently 'npm:css -- --watch' 'npm:server-reload'",
    "build": "npm run css -- --env 'production'",
    "format": "npx prettier ./**/*.html"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "dependencies": {
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.26",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3"
  }
}
